<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_inner"
        android:layout_margin="5dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iv_product_img"
            android:layout_margin="5dp"
            android:background="#dcdcdc"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rel_product"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_decrement_item"
            android:layout_toRightOf="@+id/iv_product_img"
            android:layout_toEndOf="@+id/iv_product_img"
            android:layout_toStartOf="@+id/iv_decrement_item">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_product_name"
                android:textSize="16sp"
                android:ellipsize="end"
                android:text="Aaaaa"
                android:textColor="@android:color/black"
                android:padding="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_product_price"
                android:text="$100"
                android:padding="1dp"
                android:layout_below="@+id/tv_product_name"
                android:textSize="14sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/iv_increment_item"
            app:srcCompat="@drawable/ic_add_circle_orange_24dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_product_count"
            android:text="1"
            android:padding="1dp"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_increment_item"
            android:layout_toStartOf="@+id/iv_increment_item" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_decrement_item"
            android:layout_toLeftOf="@+id/tv_product_count"
            app:srcCompat="@drawable/ic_remove_circle_orange_24dp"
            android:layout_toStartOf="@+id/tv_product_count" />

    </RelativeLayout>

</android.support.v7.widget.CardView>